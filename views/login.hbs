    <script src="https://www.amcharts.com/lib/3/amcharts.js"></script>
    <script src="https://www.amcharts.com/lib/3/serial.js"></script>
    <script src="https://www.amcharts.com/lib/3/themes/light.js"></script>
    <title>SIRIMIRI ADMIN</title>
    <link href="stylesheets/bootstrap.css" rel="stylesheet" />
    <!-- FONT AWESOME STYLE  -->
    <link href="stylesheets/font-awesome.css" rel="stylesheet" />
    <!-- CUSTOM STYLE  -->
    <link href="stylesheets/style.css" rel="stylesheet" />
    <!-- GOOGLE FONT -->
    <link href='http://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css' />
    <style>
        .app-body[_ngcontent-c0] .main[_ngcontent-c0] {
            flex: 1;
            min-width: 0;
            margin-left: 0 !important
        }
    </style>
    <style type="text/css" media="all" id="my"></style>
</head>

<body class="app" ng-version="6.1.10">
    <router-outlet></router-outlet>
    <app-dashboard _nghost-c0="">
        <div _ngcontent-c0="" class="app-body">
                    <main _ngcontent-c0="" class="main d-flex align-items-center" style="margin-top: 200px;">
                        <div _ngcontent-c0="" class="container">
                            <div _ngcontent-c0="" class="row">
                                <div _ngcontent-c0="" class="col-md-8 mx-auto">
                                    <div _ngcontent-c0="" class="card-group">
                                        <div _ngcontent-c0="" class="card text-white card-text-white">
                                            <div _ngcontent-c0="" class="card-body text-center rx-text-center card-bodyLogin">
                                                <div _ngcontent-c0=""><img _ngcontent-c0="" src="image/ip11.png">
                                                </div>
                                            </div>
                                        </div>
                                        <div _ngcontent-c0="" class="card p-4">
                                            <div _ngcontent-c0="" class="card-body">
                                                <!-- show any messages that come back with authentication -->
                                             
                                                <form method="POST" id="my-form" _ngcontent-c0="" novalidate="" class="ng-untouched ng-pristine ng-valid" action="/">
                                                    <h1 _ngcontent-c0="">ĐĂNG NHẬP</h1>
                                                    <p _ngcontent-c0="" class="text-muted"></p>
                                                    <div _ngcontent-c0="" class="input-group mb-3">
                                                        <div _ngcontent-c0="" class="input-group-prepend"><span _ngcontent-c0=""
                                                                class="input-group-text"><i _ngcontent-c0=""
                                                                    class="fa fa-user"></i></span>
                                                        </div>
                                                        <input _ngcontent-c0=""
                                                            name='email' id="email"
                                                            class="form-control ng-dirty ng-touched ng-invalid" required=""
                                                            type="text" placeholder="Email đăng nhập">
                                                    </div>
                                                    <div _ngcontent-c0="" class="input-group mb-4">
                                                        <div _ngcontent-c0="" class="input-group-prepend"><span _ngcontent-c0=""
                                                                class="input-group-text"><i _ngcontent-c0=""
                                                                    class="fa fa-lock"></i></span>
                                                        </div>
                                                        <input _ngcontent-c0=""
                                                            name='password' id="password"
                                                            class="form-control ng-dirty ng-touched ng-invalid" name="password"
                                                            required="" type="password" placeholder="Mật khẩu">
                                                    </div>
                                                    <hr _ngcontent-c0="">
                                                    <div _ngcontent-c0="" class="row">
                                                        <div _ngcontent-c0="" class="col-6">
                                                            <button type ="button"
                                                            href ="/index">Đăng Nhập</button>
                                                                
                                                               
                                                        </div>
                                                        <div _ngcontent-c0="" class="col-6 text-right"></div>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </main>
        </div>
    </app-dashboard>
</body>